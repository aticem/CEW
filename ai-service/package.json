{
  "name": "cew-ai-service",
  "version": "1.0.0",
  "description": "RAG-based AI Assistant service for CEW (Construction Engineering Workflow)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "ingest": "ts-node src/scripts/ingest.ts",
    "ingest:force": "ts-node src/scripts/ingest.ts --force",
    "ingest:qaqc": "ts-node src/scripts/ingest-qaqc.ts",
    "ingest:all": "ts-node src/scripts/ingest.ts && ts-node src/scripts/ingest-qaqc.ts",
    "test": "ts-node src/tests/integration.test.ts",
    "test:chat": "ts-node src/scripts/test-chat.ts"
  },
  "keywords": [
    "rag",
    "ai",
    "langchain",
    "construction",
    "engineering"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@langchain/community": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "chromadb": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "langchain": "^0.3.0",
    "mammoth": "^1.8.0",
    "openai": "^4.58.0",
    "pdf-parse": "^1.1.1",
    "tesseract.js": "^5.1.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
